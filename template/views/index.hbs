<!DOCTYPE html>
<html lang="en">
  <head>
    {{>header}}
  </head>
  <body>
     <!-- navbar -->
  {{>navbar}}
  <!-- main body -->
    <div class="container-fluid main_menu">
      <div class="col-md-10 col-12 mx-auto">
          <div class="row">
            <div class="col-md-6 col-12 main_header_left">
              {{>welcome_note}}
              <h1>Get The Latest <span> Weather </span> Info Of Your City</h1>
              <a href="/weather"><button class="check_btn">Check now</button></a>
            </div>
            <div class="col-md-6 col-12 main_header_right">
              <div
                id="carouselExampleControls"
                class="carousel slide"
                data-ride="carousel"
              >
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="images/bg1.jpg" class="bg_img w-100" alt="img" />
                  </div>
                  <div class="carousel-item">
                    <img src="images/bg2.jpg" class="bg_img w-100" alt="img" />
                  </div>
                  <div class="carousel-item">
                    <img src="images/bg3.jpg" class="bg_img w-100" alt="img" />
                  </div>
                </div>
                <a
                  class="carousel-control-prev"
                  href="#carouselExampleControls"
                  role="button"
                  data-slide="prev"
                >
                  <span
                    class="carousel-control-prev-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a
                  class="carousel-control-next"
                  href="#carouselExampleControls"
                  role="button"
                  data-slide="next"
                >
                  <span
                    class="carousel-control-next-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
          </div>
        </div>
    </div>
    {{>footscript}}
  </body>
  {{>footer}}
</html>

      <div class="col-md-10 col-12 mx-auto">
          <form class="search_form">
              <input type="text" class="search_field" id="cityName" placeholder="Enter your city name" autocomplete="off">
              <button class="submit_btn" id="submitBtn">Search</button>
          </form>
